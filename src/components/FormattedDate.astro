---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  datetime={date.toISOString()}
  class="order-first font-mono text-sm leading-7 text-slate-500"
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
